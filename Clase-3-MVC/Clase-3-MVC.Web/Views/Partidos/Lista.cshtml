@model List<PartidoViewModel>
@{
    ViewData["Title"] = "Partidos";
}


<div class="contenedor-tabla">

    <div class="contenedor-filtro">
        <form method="post" action="/Partidos/DelDia">
            <button type="submit" class="btn btn-dark"><b>Filtrar partidos por fecha</b></button>
            <input type="date" style="height:35px" name="Fecha" />
        </form>
    </div>

    <div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Local</th>
                <th scope="col">Visitante</th>
                <th scope="col">Resultado</th>
                <th scope="col">Fecha</th>
                <th scope="col">Horario</th>
                <th scope="col">Estadio</th>
                <th scope="col">Editar</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var partido in Model)
            {
                <tr>
                    <th scope="row">@partido.Id</th>
                    <td><a href="/Equipos/info/@partido.Local.Nombre">@partido.Local.Nombre</a></td>
                    <td><a href="/Equipos/info/@partido.Visitante.Nombre">@partido.Visitante.Nombre</a></td>
                    <td>@partido.resultado</td>
                    <td>@partido.Fecha.ToString("dd/MM/yy")</td>
                    <td>@partido.Fecha.ToString("hh:mm") pm</td>
                    <td>@partido.Lugar</td>
                    <td><a href="/Partidos/FormEdit/@partido.Id">Editar</a></td>

                </tr>
            }
        </tbody>
    </table>
    </div>
</div>


