@{
}
<form action="/CalculadorDeGastos/Index" method="post">
    <h3>Ultimo mes calculado: @ViewData["UltimoMes"]</h3>
    @*Ejemplo ViewBag*@
    <h3>Mes actual @ViewBag.MesActual</h3>
    <select name="mes">
        <option value="-1">Elija Mes</option>
        @*Ejemplo ViewData*@
        @foreach (string mes in (string[])ViewData["Meses"])
        {
            <option value="@mes">@mes</option>
        }
    </select>

    <input type="submit" value="Calcular" />
</form>